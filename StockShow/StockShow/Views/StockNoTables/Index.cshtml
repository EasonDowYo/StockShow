@model IEnumerable<StockShow.Models.StockNoTable>

@{
    Layout = "/Views/Shared/myHomeLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
    <table style="border:1px solid;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StockName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockNoName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note4)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note5)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note6)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note7)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockTypeIndexNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StockName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StockNoName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StockType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note4)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note5)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note6)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note7)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StockTypeIndexNavigation.StockTypeIndex)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StockNo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StockNo">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StockNo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
