@model StockShow.Models.StockTypeTable

@{
    Layout = "/Views/Shared/myHomeLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h4>StockTypeTable</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditStockType">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="StockTypeIndex" />
                
                <div class="form-group">
                    <label asp-for="StockTypeIndex" class="control-label"></label>
                    <input asp-for="StockTypeIndex" class="form-control" />
                    <span asp-validation-for="StockTypeIndex" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StockType" class="control-label"></label>
                    <input asp-for="StockType" class="form-control" />
                    <span asp-validation-for="StockType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
    </body>
    </html>
